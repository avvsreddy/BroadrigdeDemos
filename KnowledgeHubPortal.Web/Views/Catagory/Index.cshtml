


@model List<KnowledgeHubPortal.Domain.Entities.Catagory>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />


<h1>Catagory List ( @Model.Count  )</h1>
<hr />

 @TempData["MSG"]


<h1>@ViewBag.Date</h1>


<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New Category
    </a>
</div>

<table class="table  table-hover">

    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var catagory in Model)
        {
            <tr>
                <td>@catagory.Id</td>
                <td>@catagory.Name</td>
                <td>@catagory.Description</td>
                <td> <a class="btn btn-primary btn-sm" asp-route-id="@catagory.Id"  asp-action="Edit"><i class="fas fa-edit"></i> Edit</a>  
                <a 
                   
                   onclick="return confirm('Are you sure you want to delete this category?');"
                   class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@catagory.Id">
                    <i class="fas fa-trash-alt"></i>
                    
                    Delete</a> </td>
            </tr>
        }


    </tbody>

</table>






